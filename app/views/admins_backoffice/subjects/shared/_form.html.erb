<h1 class="h3 mb-2 text-gray-800 edit-h3"><%= "#{action_message} Assunto/Área" %></h1>
<%if @subject.errors.any? %>
    <div class="alert alert-danger alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" 
        aria-hidden="true">×</button>
        <ul>
        <% @subject.errors.full_messages.each do |message|%>
          <li> <%= message %> </li>
          <% end%>
        </ul>
    </div>
  <%end%>
<div class="row">

      <div class="col-lg-7">
        <div class="p-5">
            <%= form_with(model: [ :admins_backoffice, @subject ], local: true) do |form| %>
                <div class="form-group">
              
                  <%= form.label :description, style:"margin-left: 0.7rem" %>
                  <%= form.text_field :description, class:"form-control form-control-user", placeholder:"Descrição do Assunto/Área" %>
                </div>
                <button type="submit" class="btn btn-primary btn-user btn-block">
                    Salvar
                </button>
              <% end %>  
        </div>
    </div>
</div>