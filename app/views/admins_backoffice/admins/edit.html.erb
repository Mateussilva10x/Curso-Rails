<h1 class="h3 mb-2 text-gray-800 edit-h3">Editando</h1>
<%if @admin.errors.any? %>
    <div class="alert alert-danger alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" 
        aria-hidden="true">Ã—</button>
        <ul>
        <% @admin.errors.full_messages.each do |message|%>
          <li> <%= message %> </li>
          <% end%>
        </ul>
    </div>
  <%end%>
<div class="row">

      <div class="col-lg-7">
        <div class="p-5">
            <%= form_with(model: [ :admins_backoffice, @admin ], local: true) do |form| %>
                <div class="form-group">
              
                  <%= form.label :email, style:"margin-left: 0.7rem" %>
                  <%= form.text_field :email, class:"form-control form-control-user", placeholder:"Email Address" %>
                </div>
                <div class="form-group row">
                    <div class="col-sm-6 mb-3 mb-sm-0">
                      <%= form.label :password, style:"margin-left: 0.7rem" %>
                      <%= form.password_field :password, class:"form-control form-control-user", placeholder:"Senha" %>
                    </div>
                    <div class="col-sm-6">
                      <%= form.label :password_confirmation, style:"margin-left: 0.7rem" %>
                      <%= form.password_field :password_confirmation, class:"form-control form-control-user", placeholder:"Confirmar Senha" %>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary btn-user btn-block">
                    Salvar
                </button>
              <% end %>  
        </div>
    </div>
</div>