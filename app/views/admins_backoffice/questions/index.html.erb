<div class="container-fluid">
  <h1 class="h3 mb-2 text-gray-800">Listando Questões</h1>
  <div class="card-body">
    <div class="table-responsive">
        <div id="dataTable_wrapper" class="dataTables_wrapper dt-bootstrap4">
          <div class="row"><div class="col-sm-12 col-md-6">
          </div>
        
        </div>
        <div class="row"><div class="col-sm-12">
          <table class="table table-bordered dataTable" id="dataTable" width="100%" cellspacing="0" role="grid" aria-describedby="dataTable_info" style="width: 100%;">
            <thead>
                <tr role="row">
                  <th class="sorting sorting_asc" tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Name: activate to sort column descending" style="width: 135px;">
                    #
                  </th>
                  <th class="sorting" tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1" aria-label="Position: activate to sort column ascending" style="width: 50px;">
                    Descrição
                  </th>
                  <th class="sorting" tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1" aria-label="Position: activate to sort column ascending" style="width: 50px;">
                    Assunto
                  </th>
                  <th class="sorting" tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1" aria-label="Position: activate to sort column ascending" style="width: 50px;">
                    <%= link_to new_admins_backoffice_question_path, class:"btn btn-success btn-circle" do %>
                      <i class="fa fa-plus"></i>
                    <% end %>
                  </th>
                </tr>
            </thead>
            <tbody>
              <% @questions.each do |question| %>              
              <tr class="odd">
                <td class="sorting_1"><%= question.id %></td>
                <td><%= question.description.truncate(50) %></td>
                <td><%= question.subject.description.truncate(30) %></td>
                <td>
                    <%= link_to edit_admins_backoffice_question_path(question), class:"btn btn-info btn-circle" do %>
                        <i class="fa fa-edit"></i>
                    <% end %>

                     <%= link_to admins_backoffice_question_path(question), method: :delete, class:"btn btn-danger btn-circle", data: {confirm: "Deseja realmente excluir esta Questão"} do %>
                        <i class="fa fa-trash"></i>
                    <% end %>
                </td>
              </tr>
              <% end %>
            </tbody>
          </table>
          <%= paginate @questions %>
        </div>
      </div>
    </div>
  </div>
</div>



