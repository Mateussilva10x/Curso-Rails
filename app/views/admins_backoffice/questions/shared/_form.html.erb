<h1 class="h3 mb-2 text-gray-800 edit-h3"><%= "#{action_message} Assunto/Área" %></h1>
<%if @question.errors.any? %>
    <div class="alert alert-danger alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" 
        aria-hidden="true">×</button>
        <ul>
        <% @question.errors.full_messages.each do |message|%>
          <li> <%= message %> </li>
          <% end%>
        </ul>
    </div>
  <%end%>
<div class="row">

      <div class="col-lg-7">
        <div class="p-5">
            <%= form_with(model: [ :admins_backoffice, @question ], local: true) do |form| %>
                <div class="form-group">
              
                  <%= form.label :description, style:"margin-left: 0.7rem" %>
                  <%= form.text_area :description, class:"form-control form-control-user", placeholder:"Descrição da Questão", rows: 5 %>
                </div>
                <div class="form-group">
              
                  <%= form.label :subject, style:"margin-left: 0.7rem" %>
                  <%= form.collection_select(:subject_id, @subjects, :id, :description, {}, {class:"form-control form-control-user"}) %>
                </div>
                <button type="submit" class="btn btn-primary btn-user btn-block">
                    Salvar
                </button>
              <% end %>  
        </div>
    </div>
</div>